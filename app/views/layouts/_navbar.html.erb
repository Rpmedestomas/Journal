<section class="hero is-primary">
    <div class="hero-head">
    <nav class="navbar">
        <div class="container">
        <div class="navbar-brand">
            <% if user_signed_in? %>
                <%= link_to 'Home', root_path, class: "navbar-item" %>
                <%= link_to "Add Category", new_category_path, class:"navbar-item" %>
            <% end %>
            <span class="navbar-burger burger" data-target="navbarMenuHeroA"></span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
            <div class="navbar-end">
                <% if user_signed_in? %>
                    <%= link_to 'Edit Profile', edit_user_registration_path, class: "navbar-item" %>
                    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "navbar-item" %>
                <% else %>
                    <%= link_to 'Sign In', new_user_session_path, class: "navbar-item" %>
                    <%= link_to 'Sign Up', new_user_registration_path, class: "navbar-item" %>
                <% end %>
            </div>
        </div>
        </div>
    </nav>
    </div>

    <div class="hero-body">
    <div class="container has-text-centered">
        <h1 class="title">
        <%= yield :page_title %>
        </h1>
    </div>
    </div>
</section>